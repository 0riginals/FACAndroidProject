<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:anndroid="http://schemas.android.com/apk.res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    tools:context="com.benameur.carretriever.controler.MainActivity">

    <TextView
        android:id="@+id/activity_map_greetings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
    />
    <TextView
        android:id="@+id/activity_map_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/activity_map_button_add"
        android:text="AJOUTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSteelBlue"
        android:layout_margin="8dp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/activity_map_button_remove"
        android:text="SUPPRIMER VOITURE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSteelBlue"
        android:visibility="gone"
        android:layout_margin="8dp"
        android:textColor="@color/white"/>
    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        tools:context=".controler.MapActivity" />
</LinearLayout>